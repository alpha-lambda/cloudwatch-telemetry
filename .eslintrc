root: true

env:
  node: true
  es6: true

extends:
  - "eslint:recommended"
  - "airbnb-base"

parserOptions:
  sourceType: "script"

rules:
  arrow-body-style: 0
  class-methods-use-this: 0
  comma-dangle: 0
  max-len: [2, 100, { "ignoreStrings": true, "ignoreTrailingComments": true }]
  no-underscore-dangle: 0
  no-unused-expressions: [2, { "allowTernary": true }]
  operator-linebreak: 0
  space-before-function-paren: 0
  strict: [2, "global"]
